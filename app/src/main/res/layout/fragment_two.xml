<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".TwoFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src="@drawable/ron"
        android:layout_marginTop="40sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/ronImg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ron Weasley"
        android:textSize="40sp"
        android:layout_below="@+id/ronImg"
        android:layout_centerHorizontal="true"
        android:id="@+id/harryName"
        />

    <Button
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/harryName"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/harrybt"
        android:text="Go back my fragment"/>

</RelativeLayout>
